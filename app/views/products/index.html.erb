<div class="min-h-screen p-4 md:p-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-10">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-800"><%= t('.title') %> <% if @category %> - <%= @category.name %> <% end %></h1>
      <p class="text-gray-600 mt-2"><%= t('.total', count: products.count) %></p>
    </div>
    <!-- Products Grid -->
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3">
      <% products.each do |product| %>
        <li>
          <%= link_to product_path(product), class: "group block transition-transform duration-200 hover:-translate-y-1" do %>
            <%= render(ProductCardComponent.new(product: product, editing: false)) %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <!-- Si no hay productos -->
    <% if products.empty? %>
      <div class="text-center py-16">
        <div class="w-24 h-24 mx-auto text-gray-300">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
        </div>
        <h3 class="mt-6 text-xl font-medium text-gray-900">No products</h3>
        <p class="mt-2 text-gray-500">No products found in the catalog.</p>
      </div>
    <% end %>
  </div>
</div>
