<div class="min-h-screen p-4 md:p-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-10">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-800">Products</h1>
      <p class="text-gray-600 mt-2">Total: <%= products.count %> products</p>
    </div>

    <!-- Products Grid -->
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% products.each do |product| %>
        <li class="group">
            <!-- Product Card -->
            <%= link_to product_path(product), class: 'product' do %>
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 border border-gray-100">
                <!-- Content -->
                <div class="p-6">
                <div class="flex justify-between items-start mb-3">
                    <h2 class="text-xl font-bold text-gray-800 group-hover:text-indigo-600 transition-colors line-clamp-1">
                    <%= product.title %>
                    </h2>
                </div>

                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                    <%= product.description || "DescripciÃ³n del producto no disponible"  %>
                </p>

                    <div class="flex justify-between items-center gap-8">
                        <div class="flex items-center">
                        <span class="text-2xl font-bold text-gray-900">
                            <%= number_to_currency(product.price, unit: "$", separator: ".", delimiter: ",") %>
                        </span>
                        </div>
                        
                        <button class="px-4 py-2 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 hover:cursor-pointer">
                        Buy
                        </button>
                    </div>
                </div>
            </div>
            <% end %>
        </li>
      <% end %>
    </ul>

    <!-- Si no hay productos -->
    <% if products.empty? %>
      <div class="text-center py-16">
        <div class="w-24 h-24 mx-auto text-gray-300">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
        </div>
        <h3 class="mt-6 text-xl font-medium text-gray-900">No products</h3>
        <p class="mt-2 text-gray-500">No products found in the catalog.</p>
      </div>
    <% end %>
  </div>
</div>
