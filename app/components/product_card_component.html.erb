<div class="product w-full bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-4 title">
      <%= !@editing ? @product.displayable_title : @product.title %>
  </h1>
  <p class="text-gray-600 text-base mb-6 description"><%= @product.description.presence || "DescripciÃ³n del producto no disponible" %></p>
  <div class="flex items-center justify-between mb-6 space-x-10">
    <span class="text-2xl font-bold text-indigo-600">
      <%= number_to_currency(@product.price, unit: "$", separator: ".", delimiter: ",") %>
    </span>
    <span class="px-3 py-1 bg-indigo-100 text-indigo-700 rounded-full text-sm font-semibold">
      <% if @product.category.present? %>
        <%= @product.category.name %>
      <% else %>
        <%= ("Noncategory") %>
      <% end %>
    </span>
  </div>
  <div class="flex items-center justify-center mb-6">
        <% if @product.photo.attached? %>
      <div class="w-56 h-56 rounded-lg overflow-hidden">
        <%= image_tag @product.display_photo, alt: @product.title, class: "object-cover w-full h-full" %>
      </div>
    <% else %>
      <div class="w-56 h-56 rounded-lg bg-gray-200 flex items-center justify-center">
        <span class="text-gray-400 text-sm">No image</span>
      </div>
    <% end %>
  </div>
  <% if @show_actions%>
    <div class="grid grid-cols-2 gap-4">
      <button class="px-6 py-2 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 text-start hover:cursor-pointer">
        Buy
      </button>
      <%= link_to "Back", products_path, class: "px-6 py-2 bg-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-400 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
      <%= link_to "Edit", edit_product_path(@product), class: "px-6 py-2 bg-orange-500 text-white font-medium rounded-lg hover:bg-orange-600 transition-colors focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2" %>
      <%= link_to "Delete", product_path(@product), data: {
        controller: "delete",
        delete_url_value: product_path(@product),
        action: "click->delete#confirmDelete",
        delete_confirm_message_value: t("common")
      }, class: "px-6 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-colors focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>
